{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "rules": {
    "strict": 1,
    "comma-dangle": [1, "never"],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "indent": [2, 2],
    "no-multi-spaces": 0,
    "no-void": 2,
    "prefer-const": 0,
    "padded-blocks": 0,
    "no-debugger": 0,
    "no-template-curly-in-string": 0
  }
}
